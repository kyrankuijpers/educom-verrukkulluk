            </div>

            {######################LOGIN#######################}  
            <div class="login block shadow">
                <img id="login-img" src="assets/img/verrukkulluk-login.png">
                <form id="login-form">
                    <div class="form-group">
                        <label for="email">Email</label> 
                        <input id="email" name="email" type="email" required="required" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Wachtwoord</label> 
                        <input id="password" name="password" type="password" required="required" class="form-control">
                    </div> 
                    <div class="form-group">
                        <button name="submit" type="submit" class="btn btn-primary login-btn"><h3>Login</h3></button>
                    </div>
                </form>
            </div>
        </div>

        {######################DATA#######################}
        <div class="col-md-8 data">

            {%  block content %}
            {%  endblock %}

        </div>

    </div>

    {######################FOOTER#######################}
    <div class="row">
        <div class="col-md-12">
            <footer>
                <img id="payoff" src="assets/img/verrukkulluk-pay-off.png">
                <div class="contact">
                    <img id="contact-header" src="assets/img/verrukkulluk-contact.png">
                    <p>Verrukkuluk.nl</p>
                    <p>Poststraat 2b</p>
                    <p>Sittard</p>
