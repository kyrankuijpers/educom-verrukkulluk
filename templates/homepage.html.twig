{% extends "main.html.twig" %}

{##########################HEADER#######################}

{% block header %}

    {##########################CAROUSEL#######################}
    <div class="carousel slide" id="carousel-977957">
        <ol class="carousel-indicators">
            <li data-bs-slide-to="0" data-bs-target="#carousel-977957" class="active">
            </li>
            <li data-bs-slide-to="1" data-bs-target="#carousel-977957">
            </li>
            <li data-bs-slide-to="2" data-bs-target="#carousel-977957">
            </li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" alt="Carousel Bootstrap First" src="assets/img/car1.jpg"/>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" alt="Carousel Bootstrap Second" src="assets/img/car2.jpg"/>

            </div>
            <div class="carousel-item">
                <img class="d-block w-100" alt="Carousel Bootstrap Third" src="assets/img/car3.jpg"/>
            </div>
        </div> 
        <a class="carousel-control-prev" href="#carousel-977957" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span> <span class="sr-only"></span></a>
        <a class="carousel-control-next" href="#carousel-977957" data-bs-slide="next"><span class="carousel-control-next-icon"></span> <span class="sr-only"></span></a>
	</div>

{% endblock %}

{#########################CONTENT#######################}

{% block content %}

    <div class="row">

        {% for record in data %}
            <div class="col-md-6">
                <div class="recipe-home">         
                
                    <img src="https://img.hellofresh.com/c_fit,f_auto,fl_lossy,h_1100,q_50,w_2600/hellofresh_s3/image/555cb9cff8b25e44618b456a.jpg" style="width: 100px; height: 100px;">

                    <h4>{{ record.title }}</h4>

                    <ul>
                        {% for ingr in record.ingredients %}
                            <li>
                                {{ ingr.name }}
                            </li>
                        {% endfor %}
                    </ul>

                </div>
            </div>
        {% endfor %}
        
        <pre>
        {{ dump(data) }}
        </pre>
    </div>
{% endblock %}
