{% extends "main.html.twig" %}

{##########################HEADER#######################}

{% block header %}

    {##########################CAROUSEL#######################}
    <div class="carousel slide" id="carousel-977957">
        
        <ol class="carousel-indicators">
            <li data-bs-slide-to="0" data-bs-target="#carousel-977957" class="active">
            </li>
            <li data-bs-slide-to="1" data-bs-target="#carousel-977957">
            </li>
            <li data-bs-slide-to="2" data-bs-target="#carousel-977957">
            </li>
        </ol>

        <div class="carousel-inner">
            
            <div class="carousel-item active">
                <img class="d-block" alt="Carousel Bootstrap First" src="assets/img/car1.jpg"/>
            </div>
            
            <div class="carousel-item">
                <img class="d-block" alt="Carousel Bootstrap Second" src="assets/img/car2.jpg"/>

            </div>
           
            <div class="carousel-item">
                <img class="d-block" alt="Carousel Bootstrap Third" src="assets/img/car3.jpg"/>
            </div>
            
        </div> 

        <a class="carousel-control-prev" href="#carousel-977957" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span> <span class="sr-only"></span></a>
        <a class="carousel-control-next" href="#carousel-977957" data-bs-slide="next"><span class="carousel-control-next-icon"></span> <span class="sr-only"></span></a>
	</div>

{% endblock %}

{#########################CONTENT#######################}

{% block content %}

    <div class="row">

        {% for record in data %}
            <div class="col-md-6 block">
                <div class="recipe-home shadow">                    
                    
                    <img class="recipe-img cover" src={{ record.img }}>
                    
                    <div class="recipe-txt-and-bottom">
                        
                        <div class="recipe-txt">
                            <h4 class="green recipe-title">{{ record.title }}</h4>
                            <p>{{ record.descr_short }}</p>
                        </div>

                        <div class="recipe-bottom">
                            <a href="//localhost/educom-verrukkulluk/index.php?action=detail&recipe_id={{record.id}}" class="recipe-btn"><h5>Smullen!</h5></a>
                            
                            <div class="recipe-info-icons">
                                <i class="fa-solid fa-user-group recipe-icon"></i><p class="icon-value">4</p>
                                <i class="fa-solid fa-euro-sign recipe-icon"></i><p class="icon-value">{{(record.price/100)|round}}</p>
                                <i class="fa-solid fa-fire-flame-curved recipe-icon"></i><p class="icon-value">{{(record.kcal/4)|round}}</p>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
